    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body{ id: css_class_name }
    #wrapper
      = render 'shared/sidebar'

      #content-wrapper
        / Begin Page Content
        = yield

    = render 'shared/button_scroll_to_top'
    = render 'shared/modal_logout'
