#locationModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "locationModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-lg.modal-dialog-centered{:role => "document"}
    .modal-content
      .modal-header
        %h5.modal-title#locationModalLabel= t('jaap.select_location')
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—

      .modal-body
        .form-group
          %label= t('jaap.available_datasets')
          %small.text-muted.d-block.mb-2= t('jaap.datasets_based_on_commune')
          #dataset-list.list-group
            .text-muted.text-center.py-3= t('jaap.select_commune_first')

      .modal-footer
        %button.btn.btn-outline-danger#clear-location{:type => "button"}= t('shared.clear')
        .flex-grow-1
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}= t('shared.cancel')
        %button.btn.btn-primary#confirm-location{:type => "button", disabled: true}= t('shared.confirm')
