#content
  %nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container-fluid
      %h3 Scorecards

  - if @scorecards.present?
    %table.table.table-hover.medium-width.pretty
      %thead
        %tr
          %th #
          %th ID
          %th= sortable "conducted_year", t('scorecard.conducted_year')
          %th= sortable "category", t('scorecard.category')
          %th= sortable "commune_code", t('scorecard.location')

      %tbody
        - @scorecards.each_with_index do |scorecard, index|
          %tr
            %td= @pagy.from + index
            %td= link_to scorecard.uuid, scorecard, class: 'btn btn-link p-0'
            %td= scorecard.conducted_year
            %td= scorecard.category.humanize
            %td= scorecard.location

  - if @pagy.pages > 1
    .pagy-wrapper
      != pagy_bootstrap_nav(@pagy)
