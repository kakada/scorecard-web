- content_for :title do
  = t("program.programs")

- if policy(Program).create?
  .d-flex.justify-content-end.mb-2
    = render "shared/buttons/add_new_button", title: t('shared.add_new', name: t("program.programs")), url: new_program_path

.card.shadow.mb-4
  .card-body
    - if @programs.present?
      = render "shared/pagination_title"

      .table-responsive
        %table.table.table-hover
          %thead
            %tr
              %th= t('program.id')
              %th= t('program.name')
              %th.text-nowrap
                = t('program.shortcut_name')
              %th
          %tbody
            - @programs.each do |program|
              %tr
                %td= program.uuid
                %td
                  = link_to program.name, program_path(program), class: 'text-primary'
                %td= program.shortcut_name
                %td
                  .d-flex.justify-content-end
                    - if policy(ProgramClone.new).new?
                      = link_to clone_wizard_program_step_path(program, "select_method", restart: true), class: "btn btn-circle btn-sm btn-outline-info mr-1", data: { toggle: 'tooltip', placement: 'top', title: t('program_clone.clone_setup')} do
                        %i.fas.fa-clone
                    = render 'shared/action_buttons', edit_url: edit_program_path(program), delete_url: program_path(program), object: program

    = render "shared/no_data", items: @programs
    = render "shared/footers/pagination"

= render "shared/modal_confirm"
